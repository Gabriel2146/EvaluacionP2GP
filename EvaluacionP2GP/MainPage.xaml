<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EvaluacionP2GP.MainPage"
             Title="Recargatelefonica">

    <ScrollView>
        <VerticalStackLayout 
            padding = "30,0"
            Spacing = "25">

            //info recarga

            <Label Text = "Ingrese su numero de telefono"
                   x:Name="lbNumeroTelefonicoGP"/>

            <Entry x:Name="txtNumeroTelefonicoGP"
                   Placeholder ="ejmplo: +593 987081107"
                   Keyboard ="Numeric"/>

            <Label Text="Operador"
                   x:Name="lbOperadorGP"/>

            <Picker x:Name="pkOperadorGP">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Movistar</x:String>
                        <x:String>Claro</x:String>
                        <x:String>Tuenti</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Label Text="Seleccione el Vlaor a recargar: "
                   x:Name="lbValorRecargaGP"/>

            <RadioButton 
                Content="3" Value="3" GroupName="recargaGP" 
                CheckedChanged="OnCheckedChangedGP" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
